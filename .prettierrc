{
  "singleQuote": true,
  "twigMultiTags": ["{% %}", "{{ }}", "{# #}"],
  "overrides": [
    {
      "files": "*.html.twig",
      "options": {
        "parser": "melody",
        "plugins": ["prettier-plugin-twig-melody"]
      }
    },
    {
      "files": "*.php",
      "options": {
        "parser": "php"
      }
    }
  ],
  "plugins": ["@prettier/plugin-php"]
}
