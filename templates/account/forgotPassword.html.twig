{% extends 'account/index.html.twig' %}

{% block title %}Forgot Password - Account | The &lt;/blog&gt; Blog
{% endblock %}

{% block content %}
	<div class="form-header mb-6 flex flex-col items-center">
		<h1 class="flex justify-center items-center w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 2xl:w-28 2xl:h-28 font-bold text-sm sm:text-lg md:text-xl lg:text-2xl text-white text-center title-bg rounded-full md:mb-2 lg:mb-4">
			&lt;/blog&gt;
		</h1>
		<h3 class="font-bold  text-lg md:text-xl lg:text-3xl text-center font-semibold">Forgot your password?</h3>
		<p class="font-light">Enter your email below to recieve your</p>
		<p class="font-light">password reset instruction</p>
	</div>

	<div class="form-content flex flex-col gap-4">
		<div class="forgotPassword-form">
			<form class="flex flex-col gap-5 mb-4" action="post">
				<input type="email" placeholder="Email@domain.com" required class="border border-input bg-transparent p-3 text-base  rounded-md shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:text-sm h-12 w-full">

				<button class="btn-submit text-white inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md transition-colors shadow w-full px-2 h-12 text-sm">Submit</button>

				<div class="create-account flex gap-2">
					<p>Back to</p>
					<a class="action-link" href="/login">Log in</a>
				</div>
			</form>
		</div>

	</div>


{% endblock %}
