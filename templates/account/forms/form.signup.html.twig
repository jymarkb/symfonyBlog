<form class="flex flex-col gap-5 mb-4" action="post">

	<input type="text" placeholder="Firstname" required class="border border-input bg-transparent p-3 text-base  rounded-md shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:text-sm h-12 w-full">

	<input type="text" placeholder="Lastname" required class="border border-input bg-transparent p-3 text-base  rounded-md shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:text-sm h-12 w-full">

	<input type="email" placeholder="Email@domain.com" required class="border border-input bg-transparent p-3 text-base  rounded-md shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:text-sm h-12 w-full">

	<input type="text" placeholder="Password" required class="border border-input bg-transparent p-3 text-base  rounded-md shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium file:text-foreground placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50 md:text-sm h-12 w-full">

	<div class="valid-password">
		<ul class="flex flex-wrap">
			<li class="text-base w-1/2 text-password-help flex gap-2  items-centerflex" id="lower">
				<i class=" icon-circle-check"></i>
				<span>one lowercase character</span>
			</li>
			<li class="text-base w-1/2 text-password-help flex gap-2 items-center">
				<i class="text-password-help icon-circle-check"></i>
				one special character
			</li>
			<li class="text-base w-1/2  text-password-help  flex gap-2  items-center" id="upper">
				<i class="icon-circle-check"></i>
				one uppercase character
			</li>
			<li class="text-base w-1/2 text-password-help flex gap-2 items-center" id="character">
				<i class="icon-circle-check"></i>
				8 character minimum
			</li>
			<li class="text-base w-1/2 text-password-help flex gap-2  items-center" id="number">
				<i class="icon-circle-check"></i>
				one number
			</li>
		</ul>
	</div>

	<button class="btn-submit text-white inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md transition-colors shadow w-full px-2 h-12 text-sm">Submit</button>

</form>
