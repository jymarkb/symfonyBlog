{% set social_links = {
    'Facebook': user.facebook ?? 'Not set',
    'X (formerly Twitter)': user.twitter ?? 'Not set',
    'Github': user.github ?? 'Not set',
    'Website': user.website ?? 'Not set'
} %}


{% set user_details = {
    'First Name': user.firstName|capitalize,
    'Last Name': user.lastName|capitalize,
    'Email Address': user.email,
    'Phone': '(+63) ' ~ user.phoneNumber
} %}

{% extends '/dashboard/pages/profile.html.twig' %}

{% block details_content %}
	<div class="details-wrapper">
		<h3 class="font-semibold text-xl text-primaryTheme mb-4">My Profile</h3>

		<div class="relative border p-4 border-gray-300 rounded-2xl mb-4  flex items-center gap-3 ">
			<div class="bg-primaryTheme-600 border-primaryTheme border-2 rounded-full w-fit">
				<img class="size-14 aspect-square sm:size-20 object-cover rounded-full" src="{{ asset('img/user/admin.webp') }}" height="80" width="80" alt="user profile">
			</div>

			<div class="flex flex-col">
				<div class="flex flex-row gap-2 items-center">
					<h1 class="text-base sm:text-xl font-medium">{{ user.firstName|capitalize ~' ' ~ user.lastName|capitalize }}</h1>
					<h3 class="text-xs sm:text-sm font-normal bg-primaryTheme-100 w-fit px-3 py-1 text-primaryTheme rounded">Admin</h3>
				</div>
				<div class="text-gray-500 text-xs sm:text-sm">
					Joined
					{{ user.createdAt|date('M d, Y', "Asia/Manila") }}
				</div>
			</div>

			<button class="absolute top-4 right-4 p-1 sm:px-4 sm:py-2 border border-gray-300 text-sm font-medium text-gray-500 rounded-full hover:bg-primaryTheme-700 hover:text-white flex items-center justify-center gap-2 transition duration-200 ease-in-out">
				<span class="hidden sm:block">Edit</span>
				<i class="icon-pencil-line h-4 w-4 text-gray-500"></i>
			</button>

		</div>

		<div class="relative border p-4 border-gray-300 rounded-2xl mb-4">
			<h3 class="font-semibold text-primaryTheme mb-2">Personal Information</h3>

			<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
				{% for label, value in user_details %}
					<div class="flex flex-col gap-1">
						<p class="text-xs sm:text-sm font-medium text-gray-500">{{ label }}</p>
						<p class="text-sm sm:text-base font-medium">{{ value }}</p>
					</div>
				{% endfor %}
			</div>


			<button class="absolute top-4 right-4 p-1 sm:px-4 sm:py-2 border border-gray-300 text-sm font-medium text-gray-500 rounded-full hover:bg-primaryTheme-700 hover:text-white flex items-center justify-center sm:gap-2 transition duration-200 ease-in-out">
				<span class="hidden sm:block">Edit</span>
				<i class="icon-pencil-line h-4 w-4 text-gray-500"></i>
			</button>
		</div>

		<div class="relative border p-4 border-gray-300 rounded-2xl sm:mb-2 md:mb-4">
			{# <h3 class="font-semibold text-primaryTheme mb-2">Social Profiles</h3> #}
			<div class="flex sm:items-center flex-col sm:flex-row sm:gap-2">
					<h3 class="font-semibold text-primaryTheme">Social Profiles</h3>
					<p class="text-xs flex items-center text-red-500 gap-1 italic"><i class="icon-circle-alert"></i><span>not working at the moment</span></p>
				</div>

			<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
				{% for platform, value in social_links %}
					<div class="flex flex-col gap-1">
						<p class="text-sm font-medium text-gray-500">{{ platform }}</p>
						<p class="text-sm sm:text-base font-medium italic text-gray-700">
							{{ value is not empty ? value : 'Not set' }}
						</p>
					</div>
				{% endfor %}
			</div>

			<button class="absolute top-4 right-4 p-1 sm:px-4 sm:py-2 border border-gray-300 text-sm font-medium text-gray-500 rounded-full hover:bg-primaryTheme-700 hover:text-white flex items-center justify-center gap-2 transition duration-200 ease-in-out">
				<span class="hidden sm:block">Edit</span>
				<i class="icon-pencil-line h-4 w-4 text-gray-500"></i>
			</button>

		</div>

	</div>
{% endblock %}
