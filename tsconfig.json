{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx", // Enables JSX for React 18
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["assets/*"]
    },
    "skipLibCheck": true,
    "moduleResolution": "node" // Proper resolution for node modules
  },
  "include": ["app/Resources/js/**/*", "assets/**/*"]
}
